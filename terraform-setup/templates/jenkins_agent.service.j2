[Unit]
Description=Jenkins Agent
After=network.target

[Service]
ExecStart=/usr/bin/java -jar /var/jenkins/agent/agent.jar -jnlpUrl http://{{ jenkins_master_ip }}:8080/computer/{{ inventory_hostname }}/slave-agent.jnlp -secret {{ agent_secret }}
User=jenkins
WorkingDirectory=/var/jenkins/agent
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
